<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <CheckBox android:text="Click" android:id="@+id/checkBoxClick" android:layout_width="wrap_content" android:layout_height="wrap_content"></CheckBox>
    <CheckBox android:text="Doucleclick" android:id="@+id/checkBoxDblClick" android:layout_width="wrap_content" android:layout_height="wrap_content"></CheckBox>
    <CheckBox android:text="Single/Double click" android:id="@+id/checkBoxClickDblClick" android:layout_width="wrap_content" android:layout_height="wrap_content"></CheckBox>
    <CheckBox android:text="Drag" android:id="@+id/checkBoxDrag" android:layout_width="wrap_content" android:layout_height="wrap_content"></CheckBox>
    <CheckBox android:text="Long touch" android:id="@+id/checkBoxLongTouch" android:layout_width="wrap_content" android:layout_height="wrap_content"></CheckBox>
    <CheckBox android:text="Drag/Long touch" android:id="@+id/checkBoxDragLongTouch" android:layout_width="wrap_content" android:layout_height="wrap_content"></CheckBox>
    <Button android:text="Button" android:layout_height="wrap_content" android:id="@+id/button1" android:layout_width="match_parent"></Button>
</LinearLayout>
